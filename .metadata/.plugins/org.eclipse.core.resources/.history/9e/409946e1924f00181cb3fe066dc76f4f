<title>Insert title here</title>
<style type="text/css">
	td{
		text-align: center
	}
	a{
		text-decoration: none;
		color: silver;		
	}
	.ys{
		background-color: navy;
	}
</style>
<script type="text/javascript" src="js/jquery-1.8.3.min.js"></script>
<script type="text/javascript">
/* 	function tj(){
		window.location.href="jsp/studentadd.jsp";
	} */
	$(function(){
		
		$("#addButt").click(function(){
			window.location.href="jsp/studentadd.jsp";
		}); 
		$("#editButt").click(function(){
			
			var $xz = $("input[name='xz']:checked");
			if($xz.length==0){
				alert("请选择一个记录");
			}else if($xz.length == 1){
				//alert(123);
				var id = $xz[0].value;
				//alert(id);
				window.location.href="studentshow.do?id="+id;
			}else{
				alert("只能选择一条记录");
			}
			
		});
		$("#deleteButt").click(function(){
			var $xz = $("input[name='xz']:checked");
			if($xz.length==0){
				alert("请选择需要删除的记录");
			}else{
				if(confirm("您确定删除吗？")){
					var path="studentdeletes.do?";
					for(var i=0;i < $xz.length;i++){
						path += "id=" + $xz[i].value;
						if(i<$xz.length-1){
							path += "&";
						}
					}
					window.location.href=path;
				}
			}			
		});
		$("#tb").click(function(){
			var $xz = $("input[name='xz']")
			if($("#tb")[0].checked){
				for(var i = 0;i<$xz.length;i++){
					$xz[i].checked=true;
				}
			}else{
				for(var i = 0;i<$xz.length;i++){
					$xz[i].checked=false;
				}
			}
		});
		$("#t>tr:even").addClass("ys");
		
	});
	
</script>
</head>
<body>
	<h3>学生信息管理系统</h3><br/><br/>
	欢迎您：${username}<hr>
	<table border="1"  align="center" width=70% cellpadding="7" cellspacing="1">
